---
import Header from "~/components/header.astro";
import Footer from "~/components/footer.astro";
import MetaHead from "~/components/meta-head.astro";
import "@fontsource-variable/inter";
import "~/styles/index.css";

const title = "Join the EtchNFT Waitlist";
const description = "Get early access to experimental drops, perks, and onchain tools.";
---

<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <MetaHead {title} {description} />

  <body class="bg-black text-white font-sans selection:bg-[#DB2777] selection:text-white">
    <Header />

    <section class="relative px-4 py-24 bg-black">
      <div class="absolute inset-0 z-0 pointer-events-none">
        <div class="absolute top-1/3 left-1/2 -translate-x-1/2 w-[90vw] h-[70vh] bg-[#DB2777] opacity-10 blur-[160px] rounded-full"></div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6 text-[#DB2777]">
          Join the EtchNFT Waitlist
        </h1>
        <p class="text-gray-300 text-lg mb-12 max-w-2xl mx-auto">
          Be the first to get early access, backer rewards, and weird new onchain tools from the Etch lab.
        </p>

        <!-- Embedded Formaloo form -->
        <div class="w-full rounded-2xl border border-[#DB2777]/40 shadow-xl overflow-hidden backdrop-blur-md bg-white/5 p-4 sm:p-6">
          <iframe
            onload="javascript:parent.scrollTo(0,0);"
            height="900"
            allowTransparency="true"
            frameborder="0"
            scrolling="yes"
            style="width:100%; border:none;"
            src="https://forms.cozyartz.com/zxji2h"
            id="formalooIframe"
          ></iframe>
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>

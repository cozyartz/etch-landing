---
import Header from "~/components/header.astro";
import Footer from "~/components/footer.astro";
import MetaHead from "~/components/meta-head.astro";
import Starfield from "~/components/starfield.astro";
import "@fontsource-variable/inter";
import "~/styles/index.css";

const title = "EtchNFT ‚Äî Roadmap";
const description = "From phygital drops to protocol ‚Äî our journey ahead.";

const roadmap = [
  {
    quarter: "Q2 2025",
    icon: "üöÄ",
    items: [
      "Launch Waitlist + Backer Form",
      "Mint Flow MVP (testnet)",
      "Start inscription testing on Solana",
      "Deploy etch.sol & identity NFTs",
    ],
  },
  {
    quarter: "Q3 2025",
    icon: "üõ†",
    items: [
      "First Phygital Drop Kits",
      "Launch T-shirt Press & Fulfillment",
      "On-chain Backer Dashboard",
      "Integrate CF D1 for drop management",
    ],
  },
  {
    quarter: "Q4 2025",
    icon: "üå±",
    items: [
      "EtchNFT IRL Launch Event (Detroit)",
      "Drop #1 ‚Äì Memory Capsules",
      "Custom Inscription UI Launch",
      "Open Drop SDK (Alpha)",
    ],
  },
  {
    quarter: "Q1 2026",
    icon: "üß†",
    items: [
      "Backer Rewards NFT Distribution",
      "Etch API for Minting",
      "Launch Gallery Mode v2",
      "Support SPL & EVM standards",
    ],
  },
  {
    quarter: "Q2 2026+",
    icon: "üí°",
    items: [
      "Composable Phygital NFTs",
      "Drop Protocol Goes Open Source",
      "Multi-chain & Compressed Minting",
      "Phygital + AI Collab Experiments",
    ],
  },
];
---

<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <MetaHead {title} {description} />

  <body class="bg-black text-white font-sans selection:bg-pink-600 selection:text-white overflow-x-hidden">
    <Header />
    <Starfield />

    <main class="relative z-10 px-6 pt-32 pb-48 max-w-6xl mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-20 animate-fade-up">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-4 text-[#DB2777]">
          üìç Roadmap
        </h1>
        <p class="text-lg text-gray-400">
          From our first phygital drops to a permanent mint protocol ‚Äî here‚Äôs where EtchNFT is headed.
        </p>
      </div>

      <div class="space-y-12">
        {roadmap.map(({ quarter, icon, items }, index) => (
          <div
            class="bg-gradient-to-br from-white/10 to-[#1f1f1f] border border-white/10 rounded-xl p-6 md:p-8 shadow-xl animate-fade-up"
            style={`animation-delay: ${index * 100}ms`}
          >
            <h3 class="text-2xl font-semibold mb-4 text-[#7F73F7]">
              {icon} {quarter}
            </h3>
            <ul class="text-gray-300 text-sm md:text-base space-y-2 pl-4 list-disc marker:text-[#41C6BB]">
              {items.map((item, i) => (
                <li key={i}>{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </main>

    <Footer />

    <style>
      @keyframes fadeUp {
        0% {
          opacity: 0;
          transform: translateY(24px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fade-up {
        animation: fadeUp 0.6s ease-out both;
      }
    </style>
  </body>
</html>

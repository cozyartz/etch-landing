---
import Header from "~/components/header.astro";
import Footer from "~/components/footer.astro";
import MetaHead from "~/components/meta-head.astro";
import "@fontsource-variable/inter";
import "~/styles/index.css";

const title = "EtchNFT — Roadmap";
const description = "From phygital drops to protocol — our journey ahead.";

const roadmap = [
  {
    quarter: "Q2 2025",
    icon: "🚀",
    items: [
      "Launch Waitlist + Backer Form",
      "Mint Flow MVP (testnet)",
      "Start inscription testing on Solana",
    ],
  },
  {
    quarter: "Q3 2025",
    icon: "🛠",
    items: [
      "First Phygital Drop Kits",
      "Launch T-shirt Press & Fulfillment",
      "On-chain Backer Dashboard",
    ],
  },
  {
    quarter: "Q4 2025",
    icon: "🌱",
    items: [
      "EtchNFT IRL launch event",
      "Custom Inscription UI",
      "‘Memory Gallery’ Launch",
    ],
  },
  {
    quarter: "Q1 2026",
    icon: "📦",
    items: [
      "Support for Chain Abstraction",
      "Drop Template Builder",
      "Public Analytics Dashboards",
    ],
  },
  {
    quarter: "Beyond",
    icon: "💡",
    items: [
      "Open-source Drop Protocol",
      "Composable Phygital NFTs",
      "Compressed Mint Support",
    ],
  },
];
---

<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <MetaHead {title} {description} />

  <body class="bg-black text-white font-sans selection:bg-pink-600 selection:text-white">
    <Header />

    <main class="min-h-screen px-6 py-24">
      <div class="text-center max-w-3xl mx-auto mb-20 fade-up">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-4 text-white">
          📍 Roadmap
        </h1>
        <p class="text-lg text-gray-400">
          From our first phygital drops to a permanent mint protocol — here's where EtchNFT is headed.
        </p>
      </div>

      <div class="space-y-12 max-w-4xl mx-auto">
        {roadmap.map(({ quarter, icon, items }, index) => (
          <div
            class="bg-gradient-to-r from-[#311524] via-[#1B1A34] to-[#123738] text-white/90 p-8 rounded-2xl backdrop-blur-md border border-white/10 shadow-xl fade-up"
            style={`animation-delay: ${100 + index * 100}ms; animation-fill-mode: both; animation-name: fadeUp; animation-duration: 0.6s; animation-timing-function: ease-out;`}
          >
            <h3 class="text-2xl font-bold text-[#DB2777] mb-4 text-center">
              {icon} {quarter}
            </h3>
            <ul class="text-center text-gray-300 space-y-2 text-sm leading-relaxed">
              {items.map((item, i) => (
                <li key={i}>• {item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </main>

    <Footer />

    <style>
      @keyframes fadeUp {
        0% {
          opacity: 0;
          transform: translateY(24px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-up {
        opacity: 0;
      }
    </style>
  </body>
</html>

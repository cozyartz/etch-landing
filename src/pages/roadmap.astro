const title = "EtchNFT ‚Äî Roadmap";
const description = "The future of physical+digital drops. See what‚Äôs coming from EtchNFT.";
const ogImage = "/etchlogo.png";

const roadmap = [
  {
    quarter: "Q2 2025",
    icon: "üöÄ",
    items: [
      "Launch Waitlist + Backer Form",
      "Mint Flow MVP (testnet)",
      "Start inscription testing on Solana",
    ],
  },
  {
    quarter: "Q3 2025",
    icon: "üõ†",
    items: [
      "First Phygital Drop Kits",
      "Launch T-shirt Press & Fulfillment",
      "On-chain Backer Dashboard",
    ],
  },
  {
    quarter: "Q4 2025",
    icon: "üå±",
    items: [
      "EtchNFT IRL Launch Event",
      "Custom Inscription UI",
      "‚ÄòMemory Gallery‚Äô Launch",
    ],
  },
  {
    quarter: "Q1 2026",
    icon: "üî≠",
    items: [
      "Launch Personalized Inscription Builder",
      "Open Drop Kits to Community Creators",
      "Multi-wallet Identity Support",
      "Threads API Integration for Social Provenance",
    ],
  },
  {
    quarter: "Q2 2026",
    icon: "üîß",
    items: [
      "Etch Protocol v1 Deployment",
      "SDK for Developer Integrations",
      "Marketplace Support for Phygital Listings",
      "EtchNFT Indexer & GraphQL API",
    ],
  },
  {
    quarter: "Q3 2026",
    icon: "üåê",
    items: [
      "Ecosystem Grants Program Launch",
      "Cross-chain Drop Support (Arbitrum, Base)",
      "Identity Layer w/ ZK Verification",
      "Mobile-first Drop & Scan Experience",
    ],
  },
  {
